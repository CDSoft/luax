######################################################################
# This minimal Ninja file:
#   - compiles Lua
#   - generates build.ninja
# Then LuaX can be compiled with `ninja` using `build.ninja`.
######################################################################

builddir = .build/boot

lua = $builddir/lua
bang = tools/bang.lua

kernel = "$$(uname -s)"
linux_opts = $$([ $kernel = Linux ] && echo '-DLUA_USE_LINUX')
macos_opts = $$([ $kernel = Darwin ] && echo '-DLUA_USE_MACOSX')

rule cc
    description = Compile $out
    command = $${CC:-cc} -pipe -s -Oz $linux_opts $macos_opts $in -o $out -lm
    pool = console

build $lua: cc      $
    lua/lapi.c      $
    lua/lauxlib.c   $
    lua/lbaselib.c  $
    lua/lcode.c     $
    lua/lcorolib.c  $
    lua/lctype.c    $
    lua/ldblib.c    $
    lua/ldebug.c    $
    lua/ldo.c       $
    lua/ldump.c     $
    lua/lfunc.c     $
    lua/lgc.c       $
    lua/linit.c     $
    lua/liolib.c    $
    lua/llex.c      $
    lua/lmathlib.c  $
    lua/lmem.c      $
    lua/loadlib.c   $
    lua/lobject.c   $
    lua/lopcodes.c  $
    lua/loslib.c    $
    lua/lparser.c   $
    lua/lstate.c    $
    lua/lstring.c   $
    lua/lstrlib.c   $
    lua/ltable.c    $
    lua/ltablib.c   $
    lua/ltm.c       $
    lua/lua.c       $
    lua/lundump.c   $
    lua/lutf8lib.c  $
    lua/lvm.c       $
    lua/lzio.c

rule bang
    description = Generate $out
    command = $lua $bang -o $out $in $
        && echo You can now execute ninja to build LuaX
    pool = console

build build.ninja: bang build.lua | $lua $bang
